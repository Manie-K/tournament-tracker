<?xml version="1.0" encoding="UTF-8"?>
<!--Open Liberty documentation does not use schema in examples.-->
<server description="Jakarta EE server - tournament tracker">
    <featureManager>
        <feature>servlet-6.0</feature>
        <feature>jsonb-3.0</feature>
        <feature>cdi-4.0</feature>
        <feature>faces-4.0</feature>
        <feature>restfulWS-3.1</feature>
        <feature>persistence-3.1</feature>
        <feature>enterpriseBeans-4.0</feature>
        <feature>appSecurity-5.0</feature>
        <feature>websocket-2.1</feature>
    </featureManager>

    <application type="war" location="tournament-tracker-1.0.0-SNAPSHOT.war">
        <application-bnd>
            <security-role name="admin">
                <group name="admin" access-id="group:jdbc/TournamentTracker/admin"/>
                <run-as userid="admin-service"/>
            </security-role>
            <security-role name="user">
                <group name="user" access-id="group:jdbc/TournamentTracker/user"/>
            </security-role>
        </application-bnd>
    </application>

    <logging consoleLogLevel="INFO"/>
    <logging traceSpecification="eclipselink.sql=all"
             traceFileName="stdout"
             traceFormat="BASIC"/>


    <dataSource id="TournamentTrackerDataSource" jndiName="jdbc/TournamentTracker">
        <jdbcDriver javax.sql.XADataSource="org.h2.jdbcx.JdbcDataSource"
                    javax.sql.ConnectionPoolDataSource="org.h2.jdbcx.JdbcDataSource"
                    javax.sql.DataSource="org.h2.jdbcx.JdbcDataSource"
                    libraryRef="H2JDBCLib"/>
        <properties URL="jdbc:h2:mem:tournament-tracker"/>
        <!--        <properties URL="jdbc:h2:/tmp/tournament-tracker;AUTO_SERVER=TRUE"/>-->
    </dataSource>

    <library id="H2JDBCLib">
        <fileset dir="${wlp.install.dir}/usr/servers/defaultServer/lib/global/" includes="h2-2.2.220.jar"/>
    </library>

</server>
